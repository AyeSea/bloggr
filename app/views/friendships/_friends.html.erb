<div class="container">
	<div class="panel panel-default">
		<div class="panel-body">
			
			<h3>Friends (<%= @user.friends.count %>)</h3>

			<% @user.friends.each do |friend| %>		
				<p><%= link_to "#{friend.full_name}", user_posts_path(user_id: friend) %></p>

				<!-- User can only remove friends for their own account -->
				<% if @user == current_user %>
				<p><%= link_to "Remove Friend", friendship_path(friend_id: friend), method: :delete, class: "btn btn-danger" %></p>
				<% end %>
			<% end %>

			<%= link_to "Find more friends!", users_path %>

		</div>
	</div>
</div>