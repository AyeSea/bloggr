<!DOCTYPE html>
<html>
<head>
  <title>Clonebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<!-- Update so that different header shows if user is logged out vs. logged in -->

	<!-- Logged Out Header -->
	<header class="container-fluid loggedout-header">
		<div class="container">
			
			<div class="pull-left logo">
				<h1>
					<a href="/">clonebook</a>
				</h1>
			</div>

		</div>
	</header>

	<%= render "layouts/flash" %>

	<%= yield %>

	<%= debug(params) if Rails.env.development? %>
</body>
</html>
