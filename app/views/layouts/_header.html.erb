<header class="container-fluid site-header">

	<div class="container">
				
		<div class="row">
				
			<!-- Logo Column -->
			<div class="col-xs-6">
				<%= link_to "bloggR", root_path, class: "logo" %>
			</div>
	
			<% if user_signed_in? %>

			<!-- Logged In Links (992px and larger) -->
			<div class="hidden-xs hidden-sm col-md-6">

				<div class="pull-right header-right-col">
					<%= link_to "#{current_user.full_name}", user_posts_path(current_user), class: "btn btn-default" %>
					<%= link_to 'Pending Friend Requests', friendship_path(current_user), class: "btn btn-default" %>
					<%= link_to 'Logout', destroy_user_session_path, :method => :delete, class: "btn btn-default" %>  
				</div>

			</div>

			<div class="col-xs-6 hidden-md hidden-lg">
			
				<div class="pull-right header-right-col">
					<%= link_to "My Profile", user_posts_path(current_user), class: "btn btn-default" %>
					<%= link_to "Logout", destroy_user_session_path, :method => :delete, class: "btn btn-default" %>  
				</div>

			</div>

			<% else %>

			<!-- Logged Out Links (smaller than 768px) -->
			<div class="col-xs-6 hidden-sm hidden-md hidden-lg">
				<div class="pull-right header-right-col">
					<%= link_to "Log in now!", new_user_session_path, class: "btn btn-default" %>
				</div>
			</div>

			<!-- Logged Out Links (768px to 1199px) -->
			<div class="hidden-xs col-sm-6 hidden-lg">
				<div class="pull-right header-right-col">
					<%= link_to "Log in with bloggR", new_user_session_path, class: "btn btn-default" %>
					<%= link_to "Log in with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary" %> 
				</div>
			</div>

			<!-- Logged Out Links (larger than 1199px) -->
			<div class="hidden-xs hidden-sm hidden-md col-lg-6">
			
				<div class="pull-right header-right-col">
					<%= form_for :user, :url => session_path(:user), html: { class: "form-inline" } do |f| %>

						<div class="form-group email-fields">
						<%= f.label :email %><br>
						<%= f.text_field :email %><br>
		 				<%= f.check_box :remember_me %>
						<%= f.label :remember_me %>
						</div>

						<div class="form-group">
						<%= f.label :password %><br>
						<%= f.password_field :password %><br>
						<%= link_to "Forgot your password?", new_password_path(:user) %><br>
						</div>

						<div class="form-group login-buttons">
						<%= f.submit 'Log in', class: "btn" %>
						<%= link_to "Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary" %>	
						</div>

					<% end %>
				<div>

			</div>
			
			<% end %>

		</div>

	</div>	
		
</header>